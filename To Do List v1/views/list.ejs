<%- include('header') -%>
    <div class="box" id='heading'>
        <h1> <%= listTitle %></h1>
    </div>

    <div class="box">
        <% for (let i = 0; i < newListItem.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItem[i] %></p>
        </div>
        <% }; %>

        <form class="item" action="<%= action %>" method="post">
            <input type="text" name="newItem" value="" placeholder="New item">
            <button type="submit" name="">+</button>
        </form>
    </div>
<%- include('footer') -%>
