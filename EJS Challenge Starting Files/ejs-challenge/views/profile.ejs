<%- include('partials/header') -%>

<h1>My Posts</h1>

<div class="row">
    <div class="col-xs-12">
        <h2>Public Blogs</h2>
        <% postsArray.forEach( (post) => { %>
        <% if(post.public) { %>
            <h1><a class='post-heading' href='/posts/<%=post._id%>'><%= post.title %></a></h1>

            <% if (post.post.length > 100) { %>

                <p><%= post.post.substring(0,100) + '...' %>
                <a href='/posts/<%=post._id%>'>Read more</a>
                </p>

            <% } else { %>

                <p><%= post.post %></p>

            <% } %>
            <% } %>
        <% }); %>
    </div>
    <div class="col-xs-12">
        <h2>Private Journal Entries</h2>
        <% postsArray.forEach( (post) => { %>
        <% if(!post.public) { %>
            <h1><a class='post-heading' href='/posts/<%=post._id%>'><%= post.title %></a></h1>

            <% if (post.post.length > 100) { %>

                <p><%= post.post.substring(0,100) + '...' %>
                <a href='/posts/<%=post._id%>'>Read more</a>
                </p>

            <% } else { %>

                <p><%= post.post %></p>

            <% } %>
            <% } %>
        <% }); %>
    </div>
</div>























